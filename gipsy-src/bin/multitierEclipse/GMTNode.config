##############################################################
#
#               GIPSY Node configuration
# 
# This configuration tells the GIPSYNode process where
# the configuration files for different tier controllers are. 
##############################################################

##############################################################
# GMT Tier ID
gipsy.GEE.multitier.GMT.tierID=manager


##############################################################
#
# Configuration file of the registration store TA
# -----------------------------------------------
# This TA should be ready before the GIPSY Node is started.
#gipsy.GEE.multitier.Node.RegDSTTAConfig=RegDSTTA.config


##############################################################
#
# GMT Controller configurations
# -----------------------------
# List of DST configuration files separated by semicolon ";".
gipsy.GEE.multitier.Node.GMTConfigs=bin/multitierEclipse/GMT.config

##############################################################
#
# DST Controller configurations
# -----------------------------
# List of DST configuration files separated by semicolon ";".
gipsy.GEE.multitier.Node.DSTConfigs=bin/multitierEclipse/JiniDST.config;bin/multitierEclipse/JMSDST.config

############################################################## 
# 
# DGT Controller configurations
# ----------------------------- 
gipsy.GEE.multitier.Node.DGTConfigs=bin/multitierEclipse/sDGT.config;bin/multitierEclipse/pDGT.config

############################################################## 
# 
# DWT Controller configurations
# ----------------------------- 
gipsy.GEE.multitier.Node.DWTConfigs=bin/multitierEclipse/DWT.config

